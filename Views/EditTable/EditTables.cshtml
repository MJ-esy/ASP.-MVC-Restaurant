@{  
    ViewData["Title"] = "Edit Tables";  
}  
<div class="m-3 p-3 text-center">  
    <h1 class="display-4 text-center">@ViewData["Title"]</h1>  

    <ol class="breadcrumb d-flex justify-content-start p-3 m-5">  
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="AdminPage">Admin Page</a></li>  
        <li class="breadcrumb-item active">Edit Tables</li>  
    </ol>  
</div>  
@if (ViewData["ErrorMessage"] != null)  
{  
    <div class="alert alert-danger m-3">  
        <p>@ViewData["ErrorMessage"]</p>  
    </div>  
}  
@if (ViewData["Success"] != null)  
{  
    <div class="alert alert-success m-3">  
        <p>@ViewData["Success"]</p>  
    </div>  
}  

<div class="accordion m-3" id="editTablesAccordion">  
    <div class="accordion-item">  
        <h2 class="accordion-header" id="heading1">  
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGetAllTables" aria-expanded="false" aria-controls="collapseGetAllTables">  
                Get All Tables
            </button>  
        </h2>  
        <div id="collapseGetAllTables" class="accordion-collapse collapse" aria-labelledby="heading1" data-bs-parent="#editTablesAccordion">  
            <div class="accordion-body">  
                <a asp-action="AllTables" asp-controller="EditTable" class="btn btn-primary">Get All Tables</a>
            </div>  
        </div>  
    </div>  

    <div class="accordion-item">  
        <h2 class="accordion-header" id="heading2">  
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGetAvailableTables" aria-expanded="false" aria-controls="collapseGetAvailableTables">  
                Get Available Tables
            </button>  
        </h2>  
        <div id="collapseGetAvailableTables" class="accordion-collapse collapse" aria-labelledby="heading2" data-bs-parent="#editTablesAccordion">  
            <div class="accordion-body">
                <div class="accordion-body">
                    <a asp-action="AvailableTables" asp-controller="EditTable" class="btn btn-primary">Get Available Tables</a>
                </div>
            </div>  
        </div>  
    </div>  

    <div class="accordion-item">  
        <h2 class="accordion-header" id="heading3">  
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSetTableAvailability" aria-expanded="false" aria-controls="collapseSetTableAvailability">  
                Set Table Availability
            </button>  
        </h2>  
        <div id="collapseSetTableAvailability" class="accordion-collapse collapse" aria-labelledby="heading3" data-bs-parent="#editTablesAccordion">  
            <div class="accordion-body">  
                <form asp-action="SetTableAvailability" asp-controller="EditTable" method="post">
                    <fieldset>
                        <div>
                            <label for="TableIdInput" class="form-label mt-4">Table Id</label>
                            <input type="number" class="form-control mb-4" id="TableIdInput" name="id" aria-describedby="TableId" placeholder="Enter Table Id:">
                            <label for="isAvailable" class="form-label">Table Availability</label>
                            <select id="IsAvailable" name="IsAvailable" class="form-control mb-4">
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                            <button type="submit" class="btn btn-primary">Set Table Availability</button>
                        </div>
                    </fieldset>
                </form>  
            </div>  
        </div>  
    </div>  

    <div class="accordion-item">  
        <h2 class="accordion-header" id="heading4">  
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUpdateTableByID" aria-expanded="false" aria-controls="collapseUpdateTableByID">  
                Update Table by ID
            </button>  
        </h2>  
        <div id="collapseUpdateTableByID" class="accordion-collapse collapse" aria-labelledby="heading4" data-bs-parent="#editTablesAccordion">  
            <div class="accordion-body"> 
            </div>  
        </div>  
    </div>  
</div>

